{
  "name": "workflow-orchestrator-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for Workflow Orchestrator",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "deploy": "cdk deploy --require-approval never",
    "destroy": "cdk destroy --force",
    "deploy:dev": "STAGE=dev npm run deploy",
    "deploy:prod": "STAGE=prod npm run deploy"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "aws-cdk": "^2.168.0",
    "aws-cdk-lib": "^2.168.0",
    "constructs": "^10.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.4.5"
  }
}
